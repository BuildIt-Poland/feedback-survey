{
  "name": "feedback-survey",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:update": "npm run test -- --no-watch --updateSnapshot",
    "test:ci": "npm test -- --no-watch --coverage",
    "start-mock-server": "json-server --watch --port 3456 db/db.json",
    "start:db": "react-scripts start & npm run start-mock-server",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --list-different \"src/**/*.js\"",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
    "plugins": [
      "import"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/components/App/index.js",
      "!src/components/GlobalStyle/*",
      "!src/context/*",
      "!src/constants/*",
      "!src/styles/*"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "formik": "^1.5.4",
    "grommet": "^2.6.5",
    "grommet-icons": "^4.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "react-scroll-into-view-if-needed": "^2.1.7",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "json-server": "^0.14.2",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2"
  }
}
